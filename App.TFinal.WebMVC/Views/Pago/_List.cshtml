@model IEnumerable<App.TFinal.Models.Pago>



<table id="pagoTable" class="table table-striped table-hover table-bordered">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCartelera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCartelera)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    <a href="#" onclick="appVentas.getModal('@Url.Action("Edit", new { id=item.Id })');" data-toggle="modal"
                       data-target="#modal-container" class="btn btn-warning">
                        <span class="fa fa-edit"></span> Editar
                    </a>

                    <a href="#" onclick="appVentas.getModal('@Url.Action("Details", new { id=item.Id })');" data-toggle="modal"
                       data-target="#modal-container" class="btn btn-primary">
                        <span class="fa fa-search"></span> Ver
                    </a>
                    <a href="#" onclick="appVentas.getModal('@Url.Action("Delete", new { id=item.Id })');" data-toggle="modal"
                       data-target="#modal-container" class="btn btn-danger">
                        <span class="fa fa-trash"></span> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>


    <tfoot>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCartelera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </tfoot>

</table>
