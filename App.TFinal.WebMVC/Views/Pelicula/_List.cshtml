@model IEnumerable<App.TFinal.Models.Pelicula>
<div class="table-responsive">

     
    <table id="categoriaTable" class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombregenero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcionestpel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duracion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sipnosis)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombregenero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcionestpel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duracion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sipnosis)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>

                        <a href="#" onclick="appVentas.getModal('@Url.Action("Edit", new { id=item.Id })');" data-toggle="modal"
                           data-target="#modal-container" class="btn btn-warning">
                            <span class="fa fa-edit"></span> Editar
                        </a>

                        <a href="#" onclick="appVentas.getModal('@Url.Action("Details", new { id=item.Id })');" data-toggle="modal"
                           data-target="#modal-container" class="btn btn-primary">
                            <span class="fa fa-search"></span> Ver
                        </a>
                        <a href="#" onclick="appVentas.getModal('@Url.Action("Delete", new { id=item.Id })');" data-toggle="modal"
                           data-target="#modal-container" class="btn btn-danger">
                            <span class="fa fa-trash"></span> Eliminar
                        </a>

                        @*
                        @Html.ActionLink("Editar Categoria", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        *@
                    </td>
                </tr>
            }

        </tbody>
        <tfoot>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombregenero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcionestpel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duracion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sipnosis)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>

        </tfoot>
    </table>


</div>